@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="admin-container">
    <div class="admin-content">
        <div class="admin-header">
            <h1 class="admin-title">Hoş geldin Admin</h1>
            <p class="admin-subtitle">İnegöl İşletme Fakültesi YBS Yoklama Yönetim Sistemi'nde yönetim kontrol paneline erişim sağlıyorsunuz.</p>
        </div>

        <div class="stats-container">
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-user-graduate"></i>
                </div>
                <div class="stat-info">
                    <h3>Toplam Öğrenci Sayısı</h3>
                    <p class="stat-number">@ViewBag.TotalStudents</p>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-book"></i>
                </div>
                <div class="stat-info">
                    <h3>Toplam Ders Sayısı</h3>
                    <p class="stat-number">@ViewBag.TotalCourses</p>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>
                <div class="stat-info">
                    <h3>Düşük Katılım Gösteren Dersler</h3>
                    <p class="stat-number">@ViewBag.LowAttendanceCourses</p>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-user-plus"></i>
                </div>
                <div class="stat-info">
                    <h3>Yeni Eklenen Öğrenciler</h3>
                    <p class="stat-number">@ViewBag.NewStudents</p>
                </div>
            </div>
        </div>
    </div>
</div> 