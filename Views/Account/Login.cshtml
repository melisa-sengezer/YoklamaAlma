@model YoklamaAlma.Models.LoginViewModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="login-container">
    <div class="login-box">
        <h2 class="login-title">Ders Katılımını Takip Etmek İçin Giriş Yapın</h2>
        
        <form asp-action="Login" asp-controller="Account" method="post" class="login-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Username" class="form-label">Kullanıcı Adı / Öğrenci No</label>
                <input asp-for="Username" class="form-control" placeholder="Admin için kullanıcı adı, Öğrenci için öğrenci numarası" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Password" class="form-label">Şifre</label>
                <input asp-for="Password" class="form-control" placeholder="Şifrenizi girin" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label class="form-label">Kullanıcı Tipi</label>
                <div class="user-type-options">
                    <div class="form-check">
                        <input type="radio" asp-for="UserType" value="Admin" class="form-check-input" id="adminType" />
                        <label class="form-check-label" for="adminType">Admin</label>
                    </div>
                    <div class="form-check">
                        <input type="radio" asp-for="UserType" value="Student" class="form-check-input" id="studentType" />
                        <label class="form-check-label" for="studentType">Öğrenci</label>
                    </div>
                </div>
                <span asp-validation-for="UserType" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>
            </div>
        </form>
        
        <div class="login-footer">
            <p>Sorun yaşıyorsanız sistem yöneticisi ile iletişime geçin.</p>
            <p class="text-info">Not: Öğrenciler öğrenci numaraları ve şifreleri ile giriş yapabilir.</p>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 